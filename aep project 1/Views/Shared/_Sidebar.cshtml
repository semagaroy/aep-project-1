            <li class="treeview">
                <a href="#">
                    <i class="fa fa-bar-chart"></i> <span>Operations</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="@Url.Action("OMetrics", "Home")">Metrics</a></li>
                    <li><a href="@Url.Action("Projects", "Home")">Projects</a></li>

                </ul>
            </li>

