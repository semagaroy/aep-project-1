            <li class="@Url.IsLinkActive("Improvements", "Home")">
                <a href="@Url.Action("Improvements", "Home")"><i class="fa fa-arrow-up"></i> <span>Improvements</span></a>

            <li class="treeview">
                <a href="#">
                    <i class="fa fa-plus-square"></i> <span>Safety</span>
                    <span class="pull-right-container">
